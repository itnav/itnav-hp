---
import About5MessageSectionContentContainer from './About5MessageSectionContentContainer.svelte';
import About5MessageSectionDescription from './About5MessageSectionDescription.svelte';
import CEOSvgPath from './images/furuyama-takayuki.png?url';
---

<section class="section">
  <About5MessageSectionContentContainer client:visible>
    <h2 class="h2">
      <span class="h2-content h2-1">M</span>
      <span class="h2-content h2-2">E</span>
      <span class="h2-content h2-3">S</span>
      <span class="h2-content h2-4">S</span>
      <span class="h2-content h2-5">A</span>
      <span class="h2-content h2-6">G</span>
      <span class="h2-content h2-7">E</span>
    </h2>

    <div class="content">
      <img class="img" src={CEOSvgPath} loading="lazy" alt="古山 隆幸" />

      <div class="sentence-area">
        <h3 class="h3">
          <span class="app-wave-across-animation-on-visible">きっかけを</span>
          <br />
          <span class="app-wave-across-animation-on-visible">
            次世代へつなぐ。
          </span>
        </h3>

        <About5MessageSectionDescription client:visible />
      </div>
    </div>

    <div class="ceo app-page-padding-x">
      <span class="app-wave-across-animation-on-visible">代表取締役CEO</span>
      <h4 class="ceo-name app-wave-across-animation-on-visible">古山 隆幸</h4>
    </div>
  </About5MessageSectionContentContainer>
</section>

<style scoped lang="scss">
  .section {
    padding-top: 104px;
    padding-bottom: 120px;
    margin-bottom: 120px;
    color: $white;
    background-color: $black;
  }

  .h2 {
    margin-bottom: 40px;
    font-size: rpx(clamp(24px, 48rpx, 80px), mp);
    text-transform: uppercase;

    @include pc {
      margin-bottom: 64px;
      font-size: rpx(clamp(40px, 128rpx, 144px), pc);
    }
  }

  .h2-content {
    display: inline-block;
    text-indent: -3px;
    letter-spacing: -3px;
    opacity: 0;
    transform: translateY(100%);
    transform-origin: bottom;
    animation-duration: 540ms;
    animation-timing-function: transition-timing-function(ease-out);
    animation-fill-mode: forwards;

    :global(.visible) & {
      animation-name: fade-up;
    }
  }

  @for $i from 1 through 7 {
    .h2-#{$i} {
      animation-delay: 80ms * ($i - 1);
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    margin-bottom: 32px;
  }

  .img {
    width: 100%;
    max-width: design-width(min);
    height: 100%;
    margin-right: auto;
    margin-bottom: 48px;
    object-fit: contain;
    opacity: 0;
    animation-duration: transition-duration(long4);
    animation-timing-function: transition-easing(ease-out);
    animation-fill-mode: both;

    :global(.visible) & {
      animation-name: fade-in;
    }
  }

  .h3 {
    margin-bottom: 32px;
    font-size: 32px;
  }

  .ceo {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    padding-right: 0;
    font-weight: bold;
  }

  .ceo-name {
    font-size: 18px;
  }

  @include pc {
    .section {
      padding: 120px 0;
      margin-bottom: 160px;
    }

    .content {
      display: grid;
      grid-template-columns: minmax(0, 1fr) 1fr;
      gap: $page-padding-pc-left;
      align-items: center;
      margin-bottom: 48px;
      @include text-shadow(1px, $black);
    }

    .img {
      box-sizing: border-box;
      width: auto;
      min-width: 100%;
      margin: 0;
    }

    .h3 {
      margin-bottom: 72px;
      font-size: 48px;
    }

    .p {
      bottom: 50px;
    }

    .ceo-name {
      font-size: 24px;
    }
  }
</style>
